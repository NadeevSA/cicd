#!groovy

pipeline {
    agent any

    stages {
		stage('Build') {
			steps {
				echo "=== build ==="
				sh """
				sudo docker build -t paint -f ./ci/docker/paint.dockerfile .
				"""
			}
		}

        stage('ansible playbook'){
			steps{
			 	script{
				    ansiblePlaybook become: true, installation: './ci/ansible', inventory: 'hosts', playbook: './ci/ansible.yaml'
				}
			}
		}
	}
}