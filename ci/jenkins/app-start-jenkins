#!groovy

pipeline {
    agent any

    stages {
		stage('Build') {
			steps {
				echo "=== build ==="
				sh """
				sudo docker build -f ../docker/paint.Dockerfile ../..
				"""
			}
		}

		stage('Run') {
			steps {
				echo "=== run ==="
				sh """
				sudo docker run -d -p 8081:8080 --name app paint
				"""
			}
		}
	}
}