#!groovy

environment {
	IP = ${env.IP}
}

pipeline {
    agent any

    stages {
		stage('docker login') {
			steps {
				echo "=== login ==="
				sh """.
				sudo docker login ${IP}:5000 -u admin -p admin
				"""
			}
			when { expression { return params.start_app } }
		}

		stage('Build image') {
			steps {
				echo "=== build ==="
				sh """
				sudo docker build -t paint -f ./ci/docker/paint.dockerfile .
				"""
			}
			when { expression { return params.start_app } }
		}

		stage('change tag image') {
			steps {
				echo "=== change tag ==="
				sh """
				sudo docker tag paint ${IP}:5000/paint 
				"""
			}
			when { expression { return params.start_app } }
		}

		stage('push image in registry') {
			steps {
				echo "=== push ==="
				sh """
				sudo docker push ${IP}:5000/paint
				"""
			}
			when { expression { return params.start_app } }
		}

        stage('run ansible playbook'){
			steps{
			 	script{
					sh """
					ansible-playbook ./ci/ansible/app-start.yaml --extra-vars "DOCKER_REGISTRY=${IP}:5000" -i ./ci/hosts
					ansible-playbook ./ci/ansible/wiki_and_db-start.yaml -i ./ci/hosts
					"""
				}
			}
			when { expression { return params.start_app } }
		}

		stage('stop ansible playbook'){
			steps{
			 	script{
					sh """
					ansible-playbook ./ci/ansible/app-stop.yaml --extra-vars "DOCKER_REGISTRY=${IP}:5000" -i ./ci/hosts
					ansible-playbook ./ci/ansible/wiki_and_db-stop.yaml -i ./ci/hosts
					"""
				}
			}
			when { expression { return params.stop_app } }
		}
	}
}